---
import logo from "../../public/logo.svg?raw"

const menuList = ['home', 'menu', 'reservas', 'sobre']
---

<nav class="flex items-center justify-between bg-white text-black py-5 px-24">
    <a class="cursor-pointer">
        <Fragment set:html={logo} />
    </a>

    <div class="flex items-center">
        <ul class="flex items-center justify-evenly m-0">
            {menuList.map((item) => (
                <li class="list-none mr-4">
                    <a href={item === 'home' ? '/' : `/${item}`} class="cursor-pointer capitalize text-lg">
                        {item}
                    </a>
                </li>
            ))}
        </ul>

        <button class="bg-red-500 text-white text-sm font-semibold rounded-full w-36 h-9">
            Fa√ßa o seu pedido
        </button>
    </div>
</nav>